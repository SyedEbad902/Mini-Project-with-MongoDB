<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="p-5 min-h-screen w-full bg-zinc-900">
      <h1 class="text-white text-2xl bg-zinc-900 font-semibold">
        Profile Page
      </h1>
      <div class="flex  px-5 pt-5  mt-10 gap-3">
        <div class="w-14 h-14 bg-red-500 rounded-full"></div>
        <div>
          <h1 class="text-white text-2xl mt-3 font-semibold">
            Hello <%= user.name %>
          </h1>
          <h1 class="text-white ">You can create a new post</h1>

        </div>
      </div>

      <form class="px-5 pt-3" action="/post" method="post">
        <textarea
          placeholder="Whats on your mind?"
          class="block mb-3 p-2 outline-none resize-none mt-5 rounded-md w-1/3"
          name="content"
          id=""
        ></textarea>

        <input
          class="bg-blue-400 px-4 py-2 rounded-md text-md"
          type="submit"
          value="Create new post"
        />
      </form>

      <h1 class="text-white px-5 mb-5 text-2xl mt-6 font-semibold">Posts</h1>
      <div class="postcontainer flex flex-wrap px-10 bg-zinc-900">
        <% user.posts.reverse().forEach(function(post){ %>
        <div class="w-96 px-4 py-2 m-3 bg-zinc-700 rounded-md">
          <h1 class="text-blue-500 font-semibold">@<%=user.username %></h1>
          <p class="text-white overflow-hidden"><%= post.content %></p>

          <div class="w-full justify-between flex">
            <a class="text-blue-500" href="/like/<%= post._id%>"
              ><%=post.likes.length %> <%= post.likes.indexOf(user._id)=== -1 ?
              "Like" : "Unlike" %>
            </a>
            <a class="text-zinc-400" href="/edit/<%=post._id%>">edit</a>
          </div>
        </div>

        <% })%>
      </div>
    </div>
  </body>
</html>
